<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title Church Connect</title>
    <link rel="icon" type="image/x-icon" href="assets/logo.ico" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
    <link href="css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container px-5">
            @Html.ActionLink("Church Connect", "Index", "Home", new { area = " " }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                   @if (User.Identity.IsAuthenticated)
                   {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Menu
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="dropdown-item" href="~/Home">Home</a>
                                <a class="dropdown-item" href="#!">About Us</a>
                                <a class="dropdown-item" href="~/Home/Create">Create Account</a>
                                <a class="dropdown-item" href="~/Home/adminDashboard">Dashboard</a>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <a class="dropdown-item" href="~/Home">Home</a>
                                <a class="dropdown-item" href="#!">About Us</a>
                                <a class="dropdown-item" href="~/Home/Dashboard">Dashboard</a>

                            }
                        </div>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="~/Home/Profile">@User.Identity.Name</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/Logout">Logout</a></li>
                   }
                   else
                   {
                    <li class="nav-item"><a class="nav-link" href="~/Home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#!">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/Login">Log In</a></li>
                   }
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="masthead text-center text-white">

        @RenderBody()
    </header>
    <!-- Footer-->

    <footer class="py-5 bg-black">
        <div class="container px-5"><p class="m-0 text-center text-white small">Copyright &copy; Church Connect 2024</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>
</html>
